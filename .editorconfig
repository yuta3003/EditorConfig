# ルートの設定（.editorconfigをプロジェクトルートに配置する）
root = true

# EditorConfig
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_size = 4
indent_style = tab

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

[*.py]
indent_size = 4
indent_style = space

[*.tf]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2
indent_style = space
